	+NOGRAVITY
	+SKYEXPLODE
	var int user_rotX;
	var int user_rotY;
	States
	{
		Spawn:
			TNT1 A 0
			TNT1 A 0 A_SetUserVar("user_rotX",frandom(2.5,5.0)*(1-2*random(0,1)))
			TNT1 A 0 A_SetUserVar("user_rotY",frandom(2.5,5.0)*(1-2*random(0,1)))
