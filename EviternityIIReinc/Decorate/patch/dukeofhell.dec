		SP10 QRS 6 Bright
		SP10 T 6 Bright A_Fall
		SP10 U 6 Bright
		SP10 VWXY 6
		SP10 Z -1
		stop
	Raise:
		SP10 "[" 0
		"####" "#" 0 A_JumpIfInventory("EnemyZorched",1,"ZorchRaise")
		SP10 ZYWUTSRQPO 5
