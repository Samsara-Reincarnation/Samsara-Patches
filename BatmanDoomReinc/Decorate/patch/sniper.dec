ACTOR ExplosiveShell replaces ArchvileFire
{
obituary "%o shot by a sniper."
+NOGRAVITY
states
	{
	Spawn:
	POL5 A 10 A_Look
	loop
	See:
	TGRN A 0 BRIGHT A_PlaySound("cyber/hoof")
	TGRN A 3 BRIGHT A_SargAttack
	BON2 YZ 3 BRIGHT
	FSKU ABC 3 BRIGHT
	TGRN B 3 BRIGHT
	stop
	}
}

