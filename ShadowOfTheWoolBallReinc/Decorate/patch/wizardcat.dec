ACTOR WizardCat_Samsara : SamsaraMonsterBeastTotalGib replaces WizardCat
{
	Health 30
	Radius 20
	Height 56
	Mass 20
    Scale 0.8
	Speed 8
	PainChance 200
	Monster
	+FLOORCLIP
    +LOOKALLAROUND
    +DONTGIB
    +NOICEDEATH
	SeeSound "WIZ1"
	PainSound "WIZ3"
	DeathSound "WIZ2"
	HitObituary "$OB_IMPHIT"
	Tag "Wizard Cat"
	Obituary "You were burned by the wizard cat!"
	States
	{
	Spawn:
		TROO AABBCCBB 10 A_Look
		Loop
	See:
		TROO AABBCCBB 3 A_Chase
		Loop
	Missile:
		TNT1 A 0 A_ChangeFlag("NOPAIN",0)
		TROO E 6 A_FaceTarget
		TROO F 6 A_TroopAttack
        TROO B 3
		Goto See
	Pain:
		TROO I 2 A_Pain
		TROO I 2
		Goto See
    Pain.MightyBoot:
        TNT1 A 0 A_ChangeFlag("NOPAIN",1)
        TNT1 A 0 A_PlaySoundEx("duke/kickhit","body",0,0)
        TROO I 2 A_FaceTarget
        TNT1 A 0 A_Recoil(14)
        TROO I 16 A_Pain
        Goto See
	Death:
		TNT1 A 0 ACS_NamedExecuteAlways("Samsara_KillCount", 0, 0)
		TNT1 A 0 A_SpawnItemEx("UniversalBloodyHellGoreDeathEffect",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION|SXF_USEBLOODCOLOR)
		TROO I 5 A_Scream
		TROO J 4
		TROO K 3
		TROO L 3 A_NoBlocking
		TROO M -1
		Stop
	Raise:
        TROO A 0
		"####" "#" 0 A_JumpIfInventory("EnemyZorched",1,"ZorchRaise")
		TROO L 3
        TROO K 3
        TROO J 4
        TROO I 5
        Goto See
    Pain.ShrinkerDMG:
		TROO I 0
		"####" "#" 0 A_SetUserVar("user_scalex", scalex*65536.0)
		"####" "#" 0 A_SetUserVar("user_scaley", scaley*65536.0)
